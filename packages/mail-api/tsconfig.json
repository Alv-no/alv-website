{
  "compilerOptions": {
    "target": "es6",
    "module": "system",
    "allowJs": true,
    "checkJs": true,
    "moduleResolution": "node",
    "alwaysStrict": true,
    "strictNullChecks": false,
    "emitDeclarationOnly": true,
    "declaration": true,
    "outDir": "types",
    "removeComments": false
  },
  "include": ["src/**/*.js", "src/**/*.d.ts"]
}
