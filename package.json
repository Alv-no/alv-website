{
  "private": true,
  "scripts": {
    "fix:rome": "rome format . --write",
    "fix:scripts": "eslint --ignore-path .lintignore --cache --fix \"packages/**/*.{ts,tsx,js,jsx,json}\"",
    "lint:rome": "rome ci .",
    "lint:eslint": "eslint --ignore-path .lintignore --max-warnings 0 --cache \"packages/**/*.{ts,tsx,js,jsx,json}\""
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@blueberrypie/editor-config": "^1.0.0",
    "@blueberrypie/eslint-config": "^1.0.0",
    "eslint": "^7.13.0",
    "husky": "^4.3.0",
    "rome": "^11.0.0",
    "turbo": "^1.8.1",
    "typescript": "^4.0.5"
  },
  "resolutions": {
    "sharp": "0.28.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint:rome lint:eslint"
    }
  },
  "packageManager": "yarn@3.2.3"
}
