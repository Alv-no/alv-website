{
  "$schema": "./node_modules/rome/configuration_schema.json",
  "linter": {
    "enabled": false,
    "rules": {
      "recommended": true
    }
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentSize": 2,
    "ignore": [
      "./packages/*/public/*",
      "./packages/*/.cache/*",
      "./packages/*/.next/*",
      "./packages/*/dist/*",
      "./packages/*/build/*",
      "./packages/*/.docusaurus/*",
      "./packages/keycloak/*",
      "*.json"
    ]
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "double",
      "trailingComma": "es5"
    }
  }
}
