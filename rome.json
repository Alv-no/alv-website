{
  "$schema": "./node_modules/rome/configuration_schema.json",
  "linter": {
    "enabled": false,
    "rules": {
      "recommended": true
    }
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentSize": 2,
    "ignore": [
      "./packages/*/public/*",
      "./packages/*/.cache/*"
    ]
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "trailingComma": "all"
    }
  }
}
